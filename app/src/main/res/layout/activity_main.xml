<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/numberbutton"
        android:layout_gravity="end"
        android:textSize="40sp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/numberbutton"
        android:layout_gravity="start"
        android:textSize="30sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tvClear"
               style="@style/ActionButtonStyle"
               android:text="CE"/>

           <TextView
               android:id="@+id/tvPA"
               style="@style/ActionButtonStyle"
               android:text="("/>

           <TextView
               android:id="@+id/tvPB"
               style="@style/ActionButtonStyle"
               android:text=")" />

           <TextView
               android:id="@+id/tvDiv"
               style="@style/ActionButtonStyle"
               android:text="/"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv7"
               style="@style/NumberButtonStyle"
               android:text="7"/>

           <TextView
               android:id="@+id/tv8"
               style="@style/NumberButtonStyle"
               android:text="8"/>

           <TextView
               android:id="@+id/tv9"
               style="@style/NumberButtonStyle"
               android:text="9"/>

           <TextView
               android:id="@+id/tvFois"
               style="@style/ActionButtonStyle"
               android:text="*"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv4"
               style="@style/NumberButtonStyle"
               android:text="4"/>

           <TextView
               android:id="@+id/tv5"
               style="@style/NumberButtonStyle"
               android:text="5"/>

           <TextView
               android:id="@+id/tv6"
               style="@style/NumberButtonStyle"
               android:text="6"/>

           <TextView
               android:id="@+id/tvMoins"
               style="@style/ActionButtonStyle"
               android:text="-"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv1"
               style="@style/NumberButtonStyle"
               android:text="1"/>

           <TextView
               android:id="@+id/tv2"
               style="@style/NumberButtonStyle"
               android:text="2"/>

           <TextView
               android:id="@+id/tv3"
               style="@style/NumberButtonStyle"
               android:text="3"/>

           <TextView
               android:id="@+id/tvPlus"
               style="@style/ActionButtonStyle"
               android:text="+"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tvDot"
               style="@style/NumberButtonStyle"
               android:text="."/>

           <TextView
               android:id="@+id/tv0"
               style="@style/NumberButtonStyle"
               android:text="0"/>

           <ImageView
               android:id="@+id/tvBack"
               style="@style/NumberButtonStyle"
               android:scaleType="center"
               android:src="@drawable/backspace" />

           <TextView
               android:id="@+id/tvEgal"
               style="@style/ActionButtonStyle"
               android:text="="/>
           
       </LinearLayout>

   </LinearLayout>

</LinearLayout>